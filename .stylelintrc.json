{
 "extends": [
  "stylelint-config-prettier"
 ],
 "plugins": [
  "stylelint-order",
  "stylelint-scss"
 ],
 "rules": {
  "color-no-invalid-hex": [
   true,
   {
    "message": "Błąd wartości color/zapis"
   }
  ],
  "font-family-no-duplicate-names": [
   true,
   {
    "message": "Duplikowana nazwa rodziny czcionek"
   }
  ],
  "font-family-no-missing-generic-family-keyword": [
   true,
   {
    "message": "Brak zaimportowanej czcionki"
   }
  ],
  "function-calc-no-invalid": [
   true,
   {
    "message": "Nieprawidłowe wyrażenie w obrębie calc()"
   }
  ],
  "function-calc-no-unspaced-operator": [
   true,
   {
    "message": "Brak spacji w obrębie funkcji calc()"
   }
  ],
  "function-linear-gradient-no-nonstandard-direction": [
   true,
   {
    "message": "Nieprawidłowe wyrażenie w obrębie linear-gradient() lub brak 'to' lub denostki deg"
   }
  ],
  "string-no-newline": [
   true,
   {
    "message": "Nieprawidłowe przeniesienie ciągu znaków do nowej lini"
   }
  ],
  "unit-no-unknown": [
   true,
   {
    "message": "Nieznana lub nieprawidłowa jednostka"
   }
  ],
  "property-no-unknown": [
   true,
   {
    "message": "Nieznana lub nieprawidłowa właściwości",
    "checkPrefixed": true
   }
  ],
  "keyframe-declaration-no-important": [
   true,
   {
    "message": "Important! zabroniony w animacji w klatkach kluczowych"
   }
  ],
  "declaration-block-no-duplicate-properties": [
   true,
   {
    "message": "Niedozwolone powielenie właściwości"
   }
  ],
  "declaration-block-no-shorthand-property-overrides": [
   true,
   {
    "message": "Niedozwolone powielenie właściwości w kombach"
   }
  ],
  "selector-pseudo-class-no-unknown": [
   true,
   {
    "message": "Nieznany selektor pseudoklasy :"
   }
  ],
  "selector-pseudo-element-no-unknown": [
   true,
   {
    "message": "Nieznany selektor pseudoelementu ::"
   }
  ],
  "selector-type-no-unknown": [
   true,
   {
    "message": "Nieznany selektor typu"
   }
  ],
  "block-no-empty": [
   true,
   {
    "message": "Pusty blok"
   }
  ],
  "media-feature-name-no-unknown": [
   true,
   {
    "message": "Nieznane właściwości @media"
   }
  ],
  "at-rule-no-unknown": [
   true,
   {
    "message": "Nieznane zasady np. @unknown"
   }
  ],
  "comment-no-empty": [
   true,
   {
    "message": "Pusty komentarz"
   }
  ],
  "no-descending-specificity": [
   true,
   {
    "message": "Nie zezwalaj na selektory o niższej specyficzności po nadpisaniu selektorów o wyższej specyficzności"
   }
  ],
  "no-duplicate-at-import-rules": [
   true,
   {
    "message": "Duplikowany arkusz stylów @import"
   }
  ],
  "no-duplicate-selectors": [
   true,
   {
    "message": "Powielony selektor stylów"
   }
  ],
  "no-extra-semicolons": [
   true,
   {
    "message": "Powielony średnik na końcu reguły"
   }
  ],
  "no-invalid-double-slash-comments": [
   true,
   {
    "message": "Błędny sposób komentowania //"
   }
  ],
  "alpha-value-notation": [
   {
    "message": "Kanał alfa musi być wyrażony w 0.5",
    "string": "number"
   }
  ],
  "color-function-notation": [
   {
    "message": "Wartość koloru musi być oddzielona przecinkami",
    "string": "modern"
   }
  ],
  "color-named": [
   {
    "message": "Wartość koloru niemoże być wyrażona nazwą",
    "string": "never"
   }
  ],
  "length-zero-no-unit": [
   true,
   {
    "message": "Jednostki zerowe niepowinny posiadać opisu jednostki"
   }
  ],
  "order/order": [
   "custom-properties",
   "declarations"
  ],
  "order/properties-order": [
   "content",
   "display",
   "justify-content",
   "align-items",
   "float",
   "position",
   "top",
   "right",
   "bottom",
   "left",
   "width",
   "max-width",
   "min-width",
   "height",
   "max-height",
   "min-height",
   "z-index",
   "padding",
   "padding-top",
   "padding-right",
   "padding-bottom",
   "padding-left",
   "outline",
   "border",
   "border-top",
   "border-right",
   "border-bottom",
   "border-left",
   "border-color",
   "border-top-color",
   "border-right-color",
   "border-bottom-color",
   "border-left-color",
   "border-radius",
   "margin",
   "margin-top",
   "margin-right",
   "margin-bottom",
   "margin-left",
   "box-sizing",
   "overflow",
   "background",
   "background-color",
   "background-image",
   "background-attachment",
   "background-size",
   "background-repeat",
   "background-position",
   "opacity",
   "color",
   "list-style",
   "font-family",
   "font-size",
   "font-weight",
   "line-height",
   "text-align",
   "text-decoration",
   "text-transform",
   "letter-spacing",
   "cursor",
   "opacity",
   "transform",
   "box-shadow",
   "transition"
  ],
  "scss/at-extend-no-missing-placeholder": true
 }
}
