{
 "extends": [
  "stylelint-config-prettier"
 ],
 "plugins": ["stylelint-order"],
 "rules": {
  "color-no-invalid-hex": [
   true,
   {
    "message": "Błąd wartości color/zapis"
   }
  ],
  "font-family-no-duplicate-names": [
   true,
   {
    "message": "Duplikowana nazwa rodziny czcionek"
   }
  ],
  "font-family-no-missing-generic-family-keyword": [
   true,
   {
    "message": "Brak zaimportowanej czcionki"
   }
  ],
  "order/order": [
   "custom-properties",
   "declarations"
  ],
  "order/properties-order": [
   "content",
   "display",
   "padding",
   "border",
   "border-radius",
   "margin",
   "position",
   "top",
   "right",
   "bottom",
   "left",
   "background",
   "background-color",
   "opacity",
   "color",
   "cursor"
  ]
 }
}
