{
 "extends": [
  "stylelint-config-prettier"
 ],
 "plugins": ["stylelint-order"],
 "rules": {
  "color-no-invalid-hex": [
   true,
   {
    "message": "Błąd wartości color/zapis"
   }
  ],
  "font-family-no-duplicate-names": [
   true,
   {
    "message": "Duplikowana nazwa rodziny czcionek"
   }
  ],
  "font-family-no-missing-generic-family-keyword": [
   true,
   {
    "message": "Brak zaimportowanej czcionki"
   }
  ],
  "order/order": [
   "custom-properties",
   "declarations"
  ],
  "order/properties-order": [
   "content",
   "display",
   "float",
   "padding",
   "padding-top",
   "padding-right",
   "padding-bottom",
   "padding-left",
   "outline",
   "border",
   "border-color",
   "border-radius",
   "margin",
   "margin-top",
   "margin-right",
   "margin-bottom",
   "margin-left",
   "box-sizing",
   "overflow",
   "position",
   "top",
   "right",
   "bottom",
   "left",
   "width",
   "max-width",
   "min-width",
   "height",
   "max-height",
   "min-height",
   "background",
   "background-color",
   "opacity",
   "color",
   "list-style",
   "font-family",
   "font-size",
   "line-height",
   "text-align",
   "text-decoration",
   "font-family",
   "cursor"
  ]
 }
}
