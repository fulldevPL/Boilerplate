{
 "extends": [
  "stylelint-config-prettier"
 ],
 "plugins": [
  "stylelint-order",
  "stylelint-scss"
 ],
 "rules": {
  "color-no-invalid-hex": [
   true,
   {
    "message": "Błąd wartości color/zapis"
   }
  ],
  "font-family-no-duplicate-names": [
   true,
   {
    "message": "Duplikowana nazwa rodziny czcionek"
   }
  ],
  "font-family-no-missing-generic-family-keyword": [
   true,
   {
    "message": "Brak zaimportowanej czcionki"
   }
  ],
  "function-calc-no-invalid": [
   true,
   {
    "message": "Nieprawidłowe wyrażenie w obrębie calc()"
   }
  ],
  "function-calc-no-unspaced-operator": [
   true,
   {
    "message": "Brak spacji w obrębie funkcji calc()"
   }
  ],
  "function-linear-gradient-no-nonstandard-direction": [
   true,
   {
    "message": "Nieprawidłowe wyrażenie w obrębie linear-gradient() lub brak 'to' lub denostki deg"
   }
  ],
  "string-no-newline": [
   true,
   {
    "message": "Nieprawidłowe przeniesienie ciągu znaków do nowej lini"
   }
  ],
  "unit-no-unknown": [
   true,
   {
    "message": "Nieznana lub nieprawidłowa jednostka"
   }
  ],
  "property-no-unknown": [
   true,
   {
    "message": "Nieznana lub nieprawidłowa właściwości",
    "checkPrefixed": true
   }
  ],
  "keyframe-declaration-no-important": [
   true,
   {
    "message": "Important! zabroniony w animacji w klatkach kluczowych"
   }
  ],
  "declaration-block-no-duplicate-properties": [
   true,
   {
    "message": "Niedozwolone powielenie właściwości"
   }
  ],
  "declaration-block-no-shorthand-property-overrides": [
   true,
   {
    "message": "Niedozwolone powielenie właściwości w kombach"
   }
  ],
  "selector-pseudo-class-no-unknown": [
   true,
   {
    "message": "Nieznany selektor pseudoklasy :"
   }
  ],
  "selector-pseudo-element-no-unknown": [
   true,
   {
    "message": "Nieznany selektor pseudoelementu ::"
   }
  ],
  "selector-type-no-unknown": [
   true,
   {
    "message": "Nieznany selektor typu"
   }
  ],
  "block-no-empty": [
   true,
   {
    "message": "Pusty blok"
   }
  ],
  "media-feature-name-no-unknown": [
   true,
   {
    "message": "Nieznane właściwości @media"
   }
  ],
  "at-rule-no-unknown": [
   true,
   {
    "message": "Nieznane zasady np. @unknown"
   }
  ],
  "comment-no-empty": [
   true,
   {
    "message": "Pusty komentarz"
   }
  ],
  "no-duplicate-at-import-rules": [
   true,
   {
    "message": "Duplikowany arkusz stylów @import"
   }
  ],
  "no-duplicate-selectors": [
   true,
   {
    "message": "Powielony selektor stylów"
   }
  ],
  "no-extra-semicolons": [
   true,
   {
    "message": "Powielony średnik na końcu reguły"
   }
  ],
  "no-invalid-double-slash-comments": [
   true,
   {
    "message": "Błędny sposób komentowania //"
   }
  ],
  "color-named": [
   "never",
   {
    "message": "Wartość koloru niemoże być wyrażona nazwą"
   }
  ],
  "length-zero-no-unit": [
   true,
   {
    "message": "Jednostki zerowe niepowinny posiadać opisu jednostki"
   }
  ],
  "font-weight-notation": [
   "numeric",
   {
    "message": "Jednostki grubości czcionki muszą być wyrażone wartością numeryczną"
   }
  ],
  "number-max-precision": [
   3,
   {
    "message": "Precyzja jednostek ustawiona na 3 miejsca po przecinku"
   }
  ],
  "shorthand-property-no-redundant-values": [
   true,
   {
    "message": "Likwiduje zbędne jednostki w m,p,br"
   }
  ],
  "declaration-no-important": [
   true,
   {
    "message": "Nie zezwalaj !important w deklaracji."
   }
  ],
  "selector-max-empty-lines": [
   0,
   {
    "message": "niedozwolony odstęp miedzy selektorami"
   }
  ],
  "selector-pseudo-element-colon-notation": [
   "double",
   {
    "message": "pseudo-element powinien zawierać ::"
   }
  ],
  "color-hex-case": [
   "lower",
   {
    "message": "Niedozwolone użycie wielkich litere w wartości koloru"
   }
  ],
  "function-comma-newline-after": [
   "never-multi-line",
   {
    "message": "Niedozwolone przeniesienie do nowej lini po przecinku"
   }
  ],
  "function-comma-space-after": [
   "always",
   {
    "message": "Brak spacji po przecinku"
   }
  ],
  "function-max-empty-lines": [
   0,
   {
    "message": "Niepotrzebne spacje miedzy znakami w funkcji"
   }
  ],
  "function-whitespace-after": [
   "always",
   {
    "message": "Brak spacji miedzy funkcjami"
   }
  ],
  "number-leading-zero": [
   "always",
   {
    "message": "Brak zera przed przecinkiem"
   }
  ],
  "unit-case": [
   "lower",
   {
    "message": "Jednostki pisane dużymi znakami"
   }
  ],
  "value-list-comma-newline-after": [
   "always-multi-line",
   {
    "message": "yyy"
   }
  ],
  "value-list-comma-space-after": [
   "always-single-line",
   {
    "message": "xxx"
   }
  ],
  "value-list-max-empty-lines": [
   0,
   {
    "message": "Niedozwolone przerwy we wew deklaracji"
   }
  ],
  "property-case": [
   "lower",
   {
    "message": "Niedozwolone wielkie litery we właściwościach"
   }
  ],
  "declaration-colon-space-after": [
   "always-single-line",
   {
    "message": "zzz"
   }
  ],
  "comment-whitespace-inside": [
   "always",
   {
    "message": "Brak spacji w komentarzu"
   }
  ],
  "order/order": [
   "custom-properties",
   "declarations"
  ],
  "order/properties-order": [
   "content",
   "display",
   "flex-direction",
   "flex-wrap",
   "justify-content",
   "align-items",
   "flex-basis",
   "flex",
   "float",
   "clear",
   "position",
   "top",
   "right",
   "bottom",
   "left",
   "transform",
   "transform-origin",
   "width",
   "max-width",
   "min-width",
   "height",
   "max-height",
   "min-height",
   "z-index",
   "padding",
   "padding-top",
   "padding-right",
   "padding-bottom",
   "padding-left",
   "outline",
   "border",
   "border-width",
   "border-top",
   "border-right",
   "border-bottom",
   "border-left",
   "border-color",
   "border-top-color",
   "border-right-color",
   "border-bottom-color",
   "border-left-color",
   "border-radius",
   "box-sizing",
   "margin",
   "margin-top",
   "margin-right",
   "margin-bottom",
   "margin-left",
   "box-sizing",
   "overflow",
   "background",
   "background-color",
   "background-image",
   "background-attachment",
   "background-size",
   "background-repeat",
   "background-position",
   "opacity",
   "color",
   "list-style",
   "user-select",
   "font-family",
   "font-size",
   "font-weight",
   "line-height",
   "text-align",
   "text-decoration",
   "text-transform",
   "letter-spacing",
   "cursor",
   "opacity",
   "box-shadow",
   "text-shadow",
   "transition",
   "animation",
   "animation-duration",
   "animation-delay",
   "animation-fill-mode"
  ],
  "scss/at-extend-no-missing-placeholder": true
 }
}
